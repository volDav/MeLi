<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.drac.challenge">

    <application
        android:name=".app.MeliApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MeLi">
        <activity
            android:name=".presentation.ui.detail.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.results.ResultsActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.search.SearchActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MeLi.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>